<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable = "true"
    app:behavior_peekHeight = "0dp"
    android:id="@+id/bottom_sheet_choice"
    android:layout_height="90sp"
    android:background="@drawable/shape_write_message">

    <View
        android:id="@+id/shadow_view_choice"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@drawable/shape_choice_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:layout_width="40sp"
        android:layout_height="5sp"
        android:layout_marginTop="8sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bottom_sheet"
        android:padding="4sp"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_attach_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_documentfilled_image"
            android:layout_margin="10sp"
            android:layout_weight="1">
        </ImageView>

        <ImageView
            android:id="@+id/btn_attach_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_documentfilled"
            android:layout_margin="10sp"
            android:layout_weight="1">

        </ImageView>

        <ImageView
            android:id="@+id/btn_attach_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location"
            android:layout_margin="10sp"
            android:layout_weight="1">

        </ImageView>


    </LinearLayout>

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="@drawable/app_shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</LinearLayout>