    <item
        android:width="20sp"
        android:height="20sp"
        android:gravity="right|bottom"
        android:left="20sp"
        android:top="20sp">
        <rotate
            android:fromDegrees="315"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/blue"></solid>
            </shape>
        </rotate>
    </item>



    <item android:right="4sp">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/light_box"
                android:endColor="@color/blue"
                android:angle="0"
                android:centerX="0.05"
                ></gradient>
            <corners android:radius="4sp" />
        </shape>
    </item>


