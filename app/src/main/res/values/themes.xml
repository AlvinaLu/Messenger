<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Messenger" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/plusjakartasans_italic_variablefont_wght</item>
        <item name="font">@font/plusjakartasans_italic_variablefont_wght</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>


    </style>

    <style name="ActionBar.NoTitle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/baseline_settings_white_24dp</item>

    </style>

    <!-- For padding between button in appbar -->
    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

    <style name="ActionBar.White" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="fontFamily">@font/plusjakartasans_italic_variablefont_wght</item>
        <item name="font">@font/plusjakartasans_italic_variablefont_wght</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:background">@drawable/shape_image_alpha</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>

        <!--        black icon on the top of phone screen-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="Widget.App.Toolbar" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Subtitle1</item>
        <item name="logo">@drawable/baseline_settings_white_24dp</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/gray</item>

    </style>

    <style name="TextAppearance.Shrine.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="color">@color/gray</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="color">@color/gray</item>
    </style>


    <style name="Theme.MessengerLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->


        <!-- Customize your theme here. -->

        <item name="titleTextColor">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="actionMenuTextColor">@color/gray</item>
        <item name="android:titleTextColor">@color/gray</item>
    </style>

    <style name="Theme.Messenger.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Messenger.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Messenger.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    //dialog

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="subtitleTextStyle">@style/Subtitle.Text.Style</item>
    </style>

    <style name="Subtitle.Text.Style" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_marginBottom">8sp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/blue</item>
        <item name="rippleColor">@color/blue</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:tint">@color/blue</item>
        <item name="colorOutline">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="marginHorizontal">4sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    //popupmenu

    <style name="AppStyle.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/gray</item>
        <item name="android:color">@color/blue</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">-5sp</item>
        <item name="elevation">3sp</item>

    </style>

    //MessageDialog

    <style name="MessageAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="MessageAlertDialogThemeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


</resources>