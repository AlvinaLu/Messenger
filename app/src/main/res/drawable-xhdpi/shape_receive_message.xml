<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="20sp"
        android:height="20sp"
        android:gravity="left|bottom"
        android:right="20sp"
        android:top="20sp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/light_tone" />
            </shape>
        </rotate>
    </item>
    <item android:left="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/light_box"
                android:endColor="@color/light_tone"
                android:angle="180"
                android:centerX="0.05"
                ></gradient>
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>